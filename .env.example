# Softpack MCP Server Configuration

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false
RELOAD=false

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# CORS Configuration
ALLOWED_ORIGINS=["*"]

# Softpack Configuration
# Path to softpack installation root directory
SOFTPACK_ROOT=/opt/softpack
# Path to softpack configuration directory
SOFTPACK_CONFIG=/etc/softpack
# Path to softpack environments directory
SOFTPACK_ENVIRONMENTS_DIR=/var/lib/softpack/environments

# Spack Configuration
# Path to spack installation root directory
SPACK_ROOT=/opt/spack
# Path to spack user configuration directory
SPACK_USER_CONFIG=~/.spack
# Path to spack install directory
SPACK_INSTALL_DIR=/opt/spack/var/spack/install

# Authentication (optional)
AUTH_ENABLED=false
SECRET_KEY=your-secret-key-here
API_KEY_HEADER=X-API-Key

# External Services (optional)
EXTERNAL_API_BASE_URL=https://api.example.com
EXTERNAL_API_TIMEOUT=30

# Performance Settings
MAX_WORKERS=4
REQUEST_TIMEOUT=300
