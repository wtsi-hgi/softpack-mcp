# Softpack MCP Server Configuration

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false
RELOAD=false

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# CORS Configuration
ALLOWED_ORIGINS=["*"]

# Spack Configuration
# Path to spack installation root directory
SPACK_ROOT=/opt/spack
# Path to spack user configuration directory
SPACK_USER_CONFIG=~/.spack
# Path to spack install directory
SPACK_INSTALL_DIR=/opt/spack/var/spack/install

# Performance Settings
MAX_WORKERS=4
REQUEST_TIMEOUT=300
